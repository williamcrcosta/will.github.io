root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.{js,jsx,ts,tsx,css,scss,html}]
quote_type = single

[*.{yml,yaml}]
quote_type = double

[*.md]
trim_trailing_whitespace = false

[*.{json,xml}]
indent_style = space
indent_size = 2

[*.{rb,rake}]
indent_style = space
indent_size = 2
